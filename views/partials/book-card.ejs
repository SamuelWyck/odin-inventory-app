<div class="book-card">
    <p><%= book.title %></p>
    <div class="book-img-wrapper">
        <img src="<%= book.img_url %>" alt="<%= book.title %>">
    </div>
    <div class="book-info">
        <p><%= book.author %></p>
        <p><%= book.pub_date %></p>
    </div>
    <div class="edit-btn-wrapper">
        <button>Edit Details</button>
    </div>
</div>